    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.1.2",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "wait-port": "^1.1.0"
  }
